<% if (Array.isArray(data) && data.length > 0) {%>
<div class="player-pane shooters">
    <ul class="header">
        <li class="player">球员</li>
        <li class="team">球队</li>
        <li class="data">积分</li>
    </ul>
    <ul class="list">
        <% for(var i = 0, len = data.length; i < len; i ++) {%>
        <% var item = data[i] %>
        <li class="item">
            <div class="player">
                <div class="rank">
                    <%= item.rank %>
                </div>
                <div class="name">
                    <%= item.playerName %>
                </div>
            </div>
            <div class="team">
                <%= item.playerInfo.teamInfo.teamName %>
            </div>
            <div class="data"><%= item.stats.goals %></div>
        </li>
        <% } %>
    </ul>
    <div class="more">查看更多</div>
</div>
<% } else { %>
    <div class="tip">射手榜榜暂时为空……</div>
<% } %>